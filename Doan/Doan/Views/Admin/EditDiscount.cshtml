@model Doan.Models.Discount

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Discount</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("Menuleft")
    <div class="content">
        <h1 class="text-center">Chỉnh sửa thẻ giảm giá</h1>
        <!-- Form chỉnh sửa thẻ giảm giá -->
        <form method="post" action="/Admin/EditDiscount" id="editDiscountForm" class="row g-3">
            <input type="hidden" asp-for="Id" />
            <div class="col-md-6">
                <label for="name" class="form-label">Tên thẻ giảm giá:</label>
                <input type="text" id="name" name="Name" class="form-control" asp-for="Name" required />
            </div>
            <div class="col-md-6">
                <label for="discountValue" class="form-label">Giá trị giảm giá (%):</label>
                <input type="number" id="discountValue" name="Discount_Value" class="form-control" asp-for="Discount_Value" required />
            </div>
            <div class="col-md-6">
                <label for="startDate" class="form-label">Ngày bắt đầu:</label>
                <input type="date" id="startDate" name="Start_Date" class="form-control" asp-for="Start_Date" required />
            </div>
            <div class="col-md-6">
                <label for="endDate" class="form-label">Ngày kết thúc:</label>
                <input type="date" id="endDate" name="End_Date" class="form-control" asp-for="End_Date" required />
            </div>
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a href="/Admin/ManagerDiscount" class="btn btn-danger ms-2">Hủy</a>
            </div>
        </form>
    </div>
</body>
</html>
