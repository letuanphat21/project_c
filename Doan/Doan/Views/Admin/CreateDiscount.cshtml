@model Doan.Models.Discount

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Discount</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("Menuleft")
    <div class="content">
        <h1 class="text-center">Thêm thẻ giảm giá mới</h1>
        <!-- Form thêm thẻ giảm giá -->
        <form method="post" action="/Admin/CreateDiscount" id="addDiscountForm" class="row g-3">
            <div class="col-md-6">
                <label for="name" class="form-label">Tên thẻ giảm giá:</label>
                <input type="text" id="name" name="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="discountValue" class="form-label">Giá trị giảm giá (%):</label>
                <input type="number" id="discountValue" name="Discount_Value" class="form-control" required />
                <span asp-validation-for="Discount_Value" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="startDate" class="form-label">Ngày bắt đầu:</label>
                <input type="date" id="startDate" name="Start_Date" class="form-control" required />
                <span asp-validation-for="Start_Date" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="endDate" class="form-label">Ngày kết thúc:</label>
                <input type="date" id="endDate" name="End_Date" class="form-control" required />
                <span asp-validation-for="End_Date" class="text-danger"></span>
            </div>
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary">Thêm thẻ giảm giá</button>
                <a href="/Admin/ManagerDiscount" class="btn btn-danger ms-2">Hủy</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
