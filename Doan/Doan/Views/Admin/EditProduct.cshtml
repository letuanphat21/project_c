
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditProduct</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("Menuleft")

    <div class="content">
        <h1 class="text-center">Thêm sản phẩm mới</h1>
        <form asp-action="EditProduct" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <input type="hidden" name="pid" value="@ViewBag.Product.Id">
            <input type="hidden" name="mid" value="@ViewBag.Image.Id">
            <div class="mb-3">
                <label for="productTitle" class="form-label">Tên sản phẩm</label>
                <input type="text" class="form-control" id="productTitle" name="Title" value="@ViewBag.Product.Title" required />
            </div>

            <div class="mb-3">
                <label for="productBrand" class="form-label">Thương hiệu</label>
                <input type="text" class="form-control" id="productBrand" name="Brand" value="@ViewBag.Product.Brand" required />
            </div>

            <div class="mb-3">
                <label for="productPrice" class="form-label">Giá</label>
                <input type="number" class="form-control" id="productPrice" name="Price" value="@ViewBag.Product.Price" required />
            </div>

            <div class="mb-3">
                <label for="productDiscount" class="form-label">Giảm giá</label>
                <input type="number" class="form-control" id="productDiscount" name="Discount" value="@ViewBag.Product.Discount" required />
            </div>

            <div class="mb-3">
                <label for="productWarranty" class="form-label">Bảo hành</label>
                <input type="number" class="form-control" id="productWarranty" name="Warranty" value="@ViewBag.Product.Warranty" required />
            </div>

            <div class="mb-3">
                <label for="productInventoryNumber" class="form-label">Số lượng tồn kho</label>
                <input type="number" class="form-control" id="productInventoryNumber" name="InventoryNumber" value="@ViewBag.Product.InventoryNumber" required />
            </div>

            <div class="mb-3">
                <label for="productDescription" class="form-label">Mô tả</label>
                <textarea class="form-control" id="productDescription" name="Description">@ViewBag.Product.Description</textarea>
            </div>
            <div class="mb-3">
                <label for="productCategory" class="form-label">Thể loại</label>
                <select class="form-select" id="productCategory" name="Category" required>
                          <option value="">Chọn thể loại</option>
                          @if (ViewBag.Category != null)
                          {
                              @foreach (var category in ViewBag.Category)
                              {
                            @if (ViewBag.Product.Cid == category.Id)
                            {
                                <option value="@category.Id" selected>
                                      @category.Name
                                </option>
                            }else
                            {
                                <option value="@category.Id" >
                                    @category.Name
                                </option>
                            }

                               }
                          }
                          else
                          {
                              <option value="">Không có thể loại</option>
                          }
                      </select>

            </div>
            <div class="mb-3">
                <label for="productImage" class="form-label">Hình ảnh</label>
                <input type="file" class="form-control" id="productImage" name="Thumbnail" accept="image/*"  />
            </div>
            <div class="mb-3 ">
                <h3>Hình ảnh:</h3>
                @if (!string.IsNullOrEmpty(ViewBag.Product.Thumbnail))
                {
                    <img src="@Url.Content("~/image/thumbnail/" + ViewBag.Product.Thumbnail)" alt="Thumbnail" style="width: 100%; max-width: 300px;">
                }
                else
                {
                    <p>Không có hình ảnh.</p>
                }
            </div>

            <div class="mb-3">
                <label for="productImage" class="form-label">Hình ảnh2</label>
                <input type="file" class="form-control" id="productImage" name="image2" accept="image/*"  />
            </div>
            <div class="mb-3 ">
                <h3>Hình ảnh:</h3>
                @if (!string.IsNullOrEmpty(ViewBag.Image.Image2))
                {
                    <img src="@Url.Content("~/image/details/" + ViewBag.Image.Image2)" alt="Thumbnail" style="width: 100%; max-width: 300px;">
                }
                else
                {
                    <p>Không có hình ảnh.</p>
                }
            </div>
            <div class="d-flex justify-content-between">
                <a asp-controller="Admin" asp-action="ManagerProduct" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-primary">Cập nhập</button>
            </div>
        </form>
    </div>









    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
