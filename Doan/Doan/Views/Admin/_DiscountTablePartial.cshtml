@{
}
@model IEnumerable<Doan.Models.Discount>

@foreach (var discount in Model)
{
    <tr>
        <td>@discount.Id</td>
        <td>@discount.Name</td>
        <td>@discount.Discount_Value %</td>
        <td>@discount.Start_Date.ToString("yyyy-MM-dd")</td>
        <td>@discount.End_Date.ToString("yyyy-MM-dd")</td>
        <td>
            <a href="@Url.Action("EditDiscount", "Admin", new { id = discount.Id })" class="btn btn-warning btn-sm">Edit</a>
            <button class="btn btn-danger btn-sm delete-btn" data-id="@discount.Id" data-name="@discount.Name" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        </td>
    </tr>
}

