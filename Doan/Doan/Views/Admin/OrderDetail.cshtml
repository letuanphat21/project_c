@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OrderDetail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("Menuleft")
    <div class="content">
        <h2>Chi tiết hóa đơn</h2>

        <!-- Thông tin chính của hóa đơn -->
        <div class="row">
            <div class="col-md-4">
                <strong>Mã hóa đơn:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.Id
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Tên người mua:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.FullName
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Email:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.Email
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Số điện thoại:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.PhoneNumber
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Địa chỉ:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.Address
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Ghi chú:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.Note
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Ngày đặt hàng:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.OrderDate
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Trạng thái:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.Status
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Tổng tiền:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.TotalMoney
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <strong>Hình thức thanh toán:</strong>
            </div>
            <div class="col-md-8">
                @ViewBag.order.PaymentMethod
            </div>
        </div>

        <!-- Chi tiết sản phẩm -->
        <h3>Chi tiết sản phẩm</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá tiền</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetails in ViewBag.orderDetails)
                    {
                        <tr>
                            <td>@orderDetails.ProductTitle</td>
                            <td>@orderDetails.Quantity</td>
                            <td>@orderDetails.Price$</td>
                            <td>@(orderDetails.Quantity * orderDetails.Price)$</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Nút quay lại -->
        <div class="mt-3">
            <a asp-controller="Admin" asp-action="ManagerOrder" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
